@model DBEditViewModel
<h2>Изменение данынх страны</h2>
<h2>Выберете страну для изменения</h2>
<form method="post" action="/DBEdit/SelectEnt" name="Form">
    <input hidden name="type" value="Страна" />
    <select class="form-select form-select-sm mb-3 mt-3" required name="value" size="10" id="selPic">
        @foreach (var x in Model.allCountries)
        {
            if (Model.id == x.Код_страны.ToString())
            {
                <option selected value="@x.Код_страны">@x.Код_страны @x.НазваниеСтраны</option>
            }
            else
            {
                <option value="@x.Код_страны">@x.Код_страны @x.НазваниеСтраны</option>
            }
        }
    </select>
    <p>
        <button name="clear" value="false">Выбрать</button>
        <button name="clear" value="true">Сбросить выбор</button>
    </p>
</form>
@if (Model.isSelected)
{
    <div class="row mt-5 mb-2">
        <form class="row mt-5 mb-2" method="post" action="/DBEdit/FinishEdit" id="base">
            <input hidden name="type" value="Страна" />
            @{
                var x = Model.allCountries.FirstOrDefault(p => p.Код_страны.ToString() == Model.id);
            }
            <input hidden name="Код_страны" value="@x.Код_страны" />
            <div class="col-lg-4">
                <p>
                    
                </p>
            </div>
        </form>
        <button form="base">Внести данные</button>
    </div>
}