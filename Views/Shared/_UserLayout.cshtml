<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/Style.css" rel="stylesheet" type="text/css" />
    <script src="/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/History.js"></script>
</head>
<body class="@Context.Request.Cookies["theme"]-theme">
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/UserAccount">Glry</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/UserAccount">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Gallery/AboutGallery">О галерее</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Gallery/Excursions">Пойти на экскурсию</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Gallery/Expositions">Посетить экспозицю</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-md-0 end">
                    <li class="nav-item mx-2">
                        <button class="btn-toggle btn btn-outline-light">Тема</button>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Account/UserAccount">Аккаунт</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/Account/Logout">Выйти</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid pt-5 pb-2 px-5">
        @RenderBody()
        <div class="row justify-content-center">
            <div class="m-3 col-8" id="includedContent"></div>
        </div>
    </div>
    <footer class="container">
        <div class="row justify-content-center">
            <p class="col-8">© 2017–2022 Company, Inc.</p>
        </div>
    </footer>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>
<script id="rendered-js" src="~/js/Theme.js"></script>
