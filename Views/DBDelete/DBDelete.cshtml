@model DBDeleteViewModel
<h1 class="row mt-3">Удвление из БД</h1>
<div class="row mb-2">
    <form class="row mt-2 mb-2">
        <h5 id="1">Какой элемент удалить</h5>

        @foreach (var x in Model.allEntities.Where(e => !e.Contains("Связь_")))
        {<div class="col-lg-3">
                <a class="nav-link active" aria-current="page" href="/DBDelete/@x">@x.Replace('_', ' ')</a>
            </div>
        }
    </form>
</div>