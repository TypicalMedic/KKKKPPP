@model AccountViewModel

<div class="row mt-5 justify-content-center">
    <h4 class="col-auto">Изменение пароля</h4>
    <div class="w-100 mt-1"></div>
    <div class="col-auto">@Model.ErrorMessage</div>
    <div class="w-100 mt-1"></div>
    <form class="col-3" action="/Account/ChangePassword" method="post">
        <div class="row justify-content-center">
            <div class="form-group col">
                <label class="form-label">Введите новый пароль</label>
                <input class="form-control" name="newpassword" type="password" />
            </div>
            <div class="w-100 mt-3"></div>
            <div class="form-group col">
                <label class="form-label">Повторите пароль</label>
                <input class="form-control" type="password" name="confirmpassword" />
            </div>
            <div class="w-100 mt-3"></div>
            <div class="form-group col">
                <label class="form-label">Введите старый пароль</label>
                <input class="form-control" type="password" name="password" />
            </div>
            <div class="w-100 mt-3"></div>
            <div class="form-group col">
                <input type="submit" value="Сменить пароль" class="btn btn-outline-success" />
            </div>
        </div>
    </form>
</div>