@model AccountViewModel
<div class="row mt-3">
    <div class="col-2">
        <div class="row mt-3 ">
            <h3 class="col-auto" align="Left">Возможности</h3>
            <div class="w-100"></div>
            <a class="col-auto flex-fill  btn btn-light" style="font-size: large" href="/Account/ChangeName">Изменить имя</a>
            <div class="w-100"></div>
            <a class="col-auto flex-fill  btn btn-light" style="font-size: large" href="/Account/ChangeEmail">Изменить почту</a>
            <div class="w-100"></div>
            <a class="col-auto flex-fill  btn btn-light" style="font-size: large" href="/Account/ChangePassword">Изменить пароль</a>
        </div>

    </div>
    <div class="col-10 align-items-md-start ">
        <div class="row mt-3">
            <h3 class="col-auto" align="Left">Профиль администратора</h3>
        </div>
        <div class="row mt-1 align-items-end justify-content-start">
            <span class="col-auto " align="Left" style="font-size: x-large">Имя: @UserViewModel.userInfo.Name</span>
            <div class="w-100"></div>
            <span class="col-auto " align="Left" style="font-size: x-large">Электронная почта: @UserViewModel.userInfo.Email</span>
            <div class="w-100"></div>
            <span class="col-auto" align="Left" style="font-size: x-large">Дата регистрации: @UserViewModel.userInfo.RegistrationDate.ToString("d")</span>
        </div>
    </div>
</div>