@model LoginModel

<div class="row mt-5 justify-content-center">
    <h2 class="col-auto">Вход на сайт</h2>
    <div class="w-100 mt-1"></div>
    <div class="col-3 d-grid">
        <a class=" btn btn-outline-secondary" asp-action="Register" asp-controller="Account">Регистрация</a>
    </div>
    <div class="w-100 mt-1"></div>
    <form class="col-3" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="row justify-content-center">
            <div class="form-group col">
                <label asp-for="Email" class="form-label">Введите Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com" />
                <span asp-validation-for="Email" />
            </div>
            <div class="w-100 mt-3"></div>
            <div class="form-group col">
                <label asp-for="Password" class="form-label">Введите пароль</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>
            <div class="w-100 mt-3"></div>
            <div class="form-group col d-grid">
                <input type="submit" value="Войти" class="btn btn-outline-success" />
            </div>
        </div>
    </form>
</div>